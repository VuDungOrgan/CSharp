@model IEnumerable<Models_SVOnline.EF.User>

@{
    ViewBag.Title = "Danh sách người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Header{
    Quản lý người dùng
}

<div class="row">
    <div class="form-group col-lg-11">
        @Html.ActionLink("Tạo mới người dùng", "Create", "User", new { @class = "btn btn-danger" })
    </div>
    <div class=" row form-group col-lg-12">
        <div class="col-md-6">
            <input type="text" placeholder="Nhập từ khóa tìm kiếm..." value="@ViewBag.SearchKeyword" class="form-control" />
        </div>
        <div class="col-md-3">
            <input type="submit" value="Tìm kiếm" class="btn btn-success" />
        </div>
    </div>
</div>
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>
                    STT
                </th>
                <th>
                    Tên đăng nhập
                </th>
                <th>
                    Họ tên
                </th>
                <th>
                    Thư điện tử
                </th>
                <th></th>
            </tr>
        </thead>
        @{var i = 1; }
        @foreach (var item in Model)
        {
            <tr>
                <td align="center">
                    @i
                </td>
                <td>
                    @item.Username
                </td>
                <td>
                    @item.FullName
                </td>
                <td>
                    @item.Email
                </td>

            </tr>
            i++;
        }

    </table>